@model People.Models.ImageClass

<div style ="margin-top:80px; width:60%;"> </div>

<div class="mb-5 mt-2">

  <div class="card text-center" style="width: 18rem;" >

    <form method="post" enctype="multipart/form-data" asp-controller="Img" asp-action="Index">

        <div class="card-header">
            <h4 class="threeD1">Avatar.</h4>
        </div>

        <div class="card-body">
            @foreach(var item in Model.Fileimage)
            {
                <div class="col-xs-3">
                    <span class="tt" data-bs-placement="top" title="Delete picture">
                      <a href="@Url.Action("Delete", "Img",new {imgdel=@item.Name})">
                        <img src="~/img/delete32.png" class="dotWhite" style="float: right;" />
                      </a>
                    </span>
                </div>

              @* <div class="col-xs-3 mt-1 mb-3">
                 <span class="tt" data-bs-placement="top" title="Delete">
                       <img src="~/img/delete32.png" class="dotWhite" style="float: right;" />
                 </span>
              </div> *@

             @*  <div>@item.Name </div> *@
              <div> <img src="~/Images/@item.Name" class="brdrBtn_E1 mt-2" /></div>
              @* <div> <img src="~/Images/@item.Name" height="25%" width="25%" /></div> *@
            }
        </div>

        <div class="card-footer text-center  mb-1">
            <div class="row text-center">
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">

                    <input type="file" name="imgfile" />
                    <input type="submit" value="Upload" />

                </div>
            </div>
        </div>
       
    </form>
  </div>
</div>