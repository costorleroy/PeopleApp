@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@* <h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr /> *@

<div class="row" style="margin-top:140px;">
   
    <div style="background: #fff;
              border: 1px solid #ddd;
              margin: 0 auto;
              margin-left: auto;
              margin-right: auto;
              font-size: 16px;
              -moz-box-shadow: 1px 1px 7px #ccc;
              -webkit-box-shadow: 1px 1px 7px #ccc;
              box-shadow: 1px 1px 7px #ccc;
              width: 440px;  height:250px;
              padding: 10px;
              border-radius: 10px;">
      
      <form method="post">

        <div class="card text-center">
           <div class="card-header">
              <h4 class="threeD1">Reset Password.</h4>
           </div>

          <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
           @*  <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button> *@
          </div>

          <div class="card-footer text-center">
              <div class="row text-center">
                   <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                           @*  <button id="login-submit" type="submit" class="btn btn-sm btn-success">Log in</button>
                            <a type="button" class="btn btn-warning" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> *@

                       <button type="submit" class="btn btn-primary btn-sm">Reset Password</button>
                       <button id="btnClear" type="button" class="btn btn-danger btn-sm" onclick="javascript:GoToHomePage()">Cancel </button>
                   </div>
              </div>
          </div>
        </div>
      </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
