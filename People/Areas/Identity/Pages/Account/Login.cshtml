<form id="account" method="post">
                @* <h2>Use a local account to log in.</h2>
                <hr />
            autocomplete="username" aria-required="true" placeholder="name@example.com"
            autocomplete="current-password" aria-required="true" placeholder="password"
            *@

       <div class="card text-center">

           <div class="card-header">
                <h4 class="threeD1">Account Login.</h4>
          </div>
          <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control"/>
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3" style="padding:15px;">
                    <div class="checkbox" >
                        <label asp-for="Input.RememberMe" class="form-label" style="float:left; font-aize:xx-small;">
                            <span class="tt" data-bs-placement="top" title="Remember me">

                              <input class="form-check-input" asp-for="Input.RememberMe" />
                            </span>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>

                         <a id="forgot-password" asp-page="./ForgotPassword" 
                            style="float:right; font-aize:xx-small; text-decoration:none;"
                               data-bs-toggle="tooltip" title="Reset your password?"> Forgot password?
                         </a>
                    </div>
                </div>
          </div>
          <div class="card-footer text-center">
                <div class="row text-center">
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">

                      <button id="login-submit" type="submit" class="btn btn-sm btn-success">Log in</button>

                      <a type="button" class="btn btn-sm btn-warning" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                               data-toggle="tooltip" data-placement="top" title="Go to Register">Register</a>

                            <button id="btnClear" type="button" class="btn btn-sm btn-danger" onclick="javascript:GoToHomePage()">Cancel </button>
                    </div>
                </div>
          </div>
           
       </div>
     </form>
  </div>

</div>

