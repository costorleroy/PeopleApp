@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<div class="row" style="margin-top:60px;">

    <div style="background: #fff;
                border: 1px solid #ddd;
                margin: 0 auto;
                margin-left: auto;
                margin-right: auto;
                font-size: 16px;
                -moz-box-shadow: 1px 1px 7px #ccc;
                -webkit-box-shadow: 1px 1px 7px #ccc;
                box-shadow: 1px 1px 7px #ccc;
                width: 450px;  height: 440px;
                padding: 10px;
                border-radius: 10px;">

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
           
            <div class="card text-center">

                <div class="card-header">
                    <h4 class="threeD1">REGISTER</h4>
                </div>
             
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="row g-1 mb-1 align-items-center">

                        <div class="col col-md-6 form-floating ">
                            <input asp-for="Input.FirstName" class="form-control" />
                            <label asp-for="Input.FirstName" class="col-form-label"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col col-md-6 form-floating ">
                            <input asp-for="Input.LastName" class="form-control" />
                            <label asp-for="Input.LastName" class="col-form-label"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                    </div>

                   @*  autocomplete="username" aria-required="true" placeholder="name@example.com"
                        autocomplete="new-password" aria-required="true" placeholder="password"
                    autocomplete="new-password" aria-required="true" placeholder="password"
                    *@
                    <div class="form-floating mb-1">
                        <input asp-for="Input.Email" class="form-control"/>
                        <label asp-for="Input.Email" class="col-form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-1">
                        <input asp-for="Input.Password" class="form-control"/>
                        <label asp-for="Input.Password" class="col-form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-1">
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <label asp-for="Input.ConfirmPassword" class="col-form-label">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <div class="row text-center">
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <button id="registerSubmit" type="submit" class="btn btn-sm btn-success">Register</button>
                           @*  <button id="login-submit" type="submit" class="btn btn-sm btn-warning">Go to Login</button> *@

                            <a type="button" class="btn btn-sm btn-warning" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                               data-toggle="tooltip" data-placement="top" title="Go to Login">Login</a>

                            <button id="btnClear" type="button" class="btn btn-sm btn-danger" onclick="javascript:GoToHomePage()">Cancel </button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

