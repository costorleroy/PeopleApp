@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

@* <h3>@ViewData["Title"] </h3> *@

<div style="margin-top:auto;"></div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row col-mb-5">

  <div class="col-md-6">

    <div style="background: #fff;
              border: 1px solid #ddd;
              margin: 0 auto;
              margin-left: auto;
              margin-right: auto;
              font-size: 16px;
              -moz-box-shadow: 1px 1px 7px #ccc;
              -webkit-box-shadow: 1px 1px 7px #ccc;
              box-shadow: 1px 1px 7px #ccc;
              width: 450px; height: 310px;
              padding: 10px;
              border-radius: 10px;">

        <form id="profile-form" method="post">

          <div class="card text-center">
              <div class="card-header">
                        <h4 class="threeD1">PROFILE</h4>
              </div>
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>


            <div class="card-footer text-center">
               <div class="row text-center">
                  <div class="btn-group" role="group" aria-label="Basic mixed styles example">
               
                       <button id="update-profile-button" type="submit" class="btn btn-sm btn-success">Save</button>
                       <button id="btnClear" type="button" class="btn btn-danger btn-sm" onclick="javascript:GoToHomePage()">Cancel </button>
                  </div>
               </div>
            </div>
   
          </div>
        </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
